<h1><%= @user.email %></h1>


<div id="content" class="section content bg-base">

				<h2 class="section-title ribbon ribbon-highlight"><span>Your Articles</span></h2>

				<div class="row entries">


					<% @articles.each do |article| %>

					<article class="entry style-grid type-post col-xs-6 col-sm-6 col-md-3 colheight-sm-1 colheight-md-1">
						
						<header class="entry-header">
							<h3  class="entry-title">
								<a href="/articles/<%= article.id %>" rel="bookmark"><%= article.title %></a>
							</h3>
							<h3  class="entry-title">
								<a href="/articles/<%= article.id %>/edit" rel="bookmark">Edit</a>
							</h3>
						</header>

						<figure class="entry-thumbnail">

							<a href="/articles/<%= article.id %>" class="overlay overlay-primary"></a>

							<img src="http://www.marble-city.co.uk/img/slideshow/marble---arabescato-altissimo.jpg" data-src="http://www.marble-city.co.uk/img/slideshow/marble---arabescato-altissimo.jpg" data-src-retina="http://www.marble-city.co.uk/img/slideshow/marble---arabescato-altissimo.jpg" width="230" height="230" alt="">

							<noscript>
								<img src="http://placehold.it/230x230" alt="">
							</noscript>

						</figure>

					</article>
				
				
				<% end %>

				</div><!--/.row.entries-->