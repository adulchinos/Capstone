<h1><%= @user.email %></h1>


<div id="content" class="section content bg-base">

				<h2 class="section-title ribbon ribbon-highlight"><span>Your Articles</span></h2>

				<div class="row entries">


					<% @articles.each do |article| %>

					<article class="entry style-grid type-post col-xs-6 col-sm-6 col-md-3 colheight-sm-1 colheight-md-1">
						
						<header class="entry-header">
							<h3  class="entry-title">
								<a href="/articles/<%= article.id %>" rel="bookmark"><%= article.title %></a>
							</h3>
							<div class="entry-meta">
								<span class="entry-date"><a href=""><time datetime="2013-07-04T23:26:34+00:00">8 hours ago</time></a></span>
								<span class="entry-category">In <a href="blog.html">Category</a></span>
							</div>
						</header>

						<figure class="entry-thumbnail">

							<a href="single.html" class="overlay overlay-primary"></a>

							<img src="../img/placeholder.gif" data-src="http://placehold.it/230x230" data-src-retina="http://placehold.it/460x460" width="230" height="230" alt="">

							<noscript>
								<img src="http://placehold.it/230x230" alt="">
							</noscript>

						</figure>

					</article>
				
				
				<% end %>

				</div><!--/.row.entries-->